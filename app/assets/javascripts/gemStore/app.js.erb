//= require gemStore/products/products

(function(){
  var app = angular.module('store', ['store-products', 'Devise']);

  app.config(['$httpProvider', function($httpProvider){
    $httpProvider.defaults.headers.common["X-CSRF-Token"] = document.querySelector('meta[name=csrf-token]').content;
    $httpProvider.defaults.headers.common.Accept = 'application/json';
  }]);

  app.controller('StoreController', ['$scope', '$http', function($scope, $http){
    $scope.products = [];

    $http.get("/products").success(function(data){
      $scope.products = data.products;
      console.log($scope.products);
    });
  }]);

  app.controller('ReviewController', function(){
    this.review = {};

    this.addReview = function(product){
      this.review.createdOn = Date.now();
      product.reviews.push(this.review);
      this.review = {};
    };
  });

  app.controller('ProductController', ['$http', '$scope', function($http, $scope){

    this.create = function(product){
      $http.post("/products", { product: product }).success(function(data){
        $scope.products.unshift(data.product);
        $scope.newProduct = {};
      })
    }
  }]);

  angular.module('public.ctrl.signIn', []).controller('signInCtrl', ['Auth', '$scope', '$location',
    function(Auth, $scope, $location) {
      this.credentials = { email: '', password: '' };

      this.signIn = function() {
        // Code to use 'angular-devise' component
        Auth.login(this.credentials).then(function(user) {
          $location.path("/");
          alert('Successfully signed in user!')
        }, function(error) {
          console.info('Error in authenticating user!');
          alert('Error in signing in user!');
        });
      }
    }
  ]);
})();
